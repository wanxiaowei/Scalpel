<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_require"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_weight="40"
        android:background="#00FFAA"
        android:gravity="center" />

    <TextView
        android:id="@+id/textview_mark_hand"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="#00AAFF"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textview_mark_angle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="#00AAFF"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textview_mark_force"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="#00AAFF"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textview_mark_length"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="#00AAFF"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textview_mark_total"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        android:background="#00AAFF"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_screenshot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:onClick="onClick"
            android:text="截图" />
        <Button
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:onClick="onClick"
            android:text="返回" />
    </LinearLayout>

</LinearLayout>